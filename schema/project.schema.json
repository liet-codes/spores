{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spore Project",
  "description": "A work-in-progress seeking collaborators",
  "type": "object",
  "required": ["name", "tagline", "status", "seeking", "vision", "why_join", "links", "maintainer", "updated"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Project identifier (lowercase, hyphens allowed)"
    },
    "tagline": {
      "type": "string",
      "maxLength": 100,
      "description": "One-line description"
    },
    "status": {
      "type": "string",
      "enum": ["idea", "prototype", "active", "stuck", "paused"],
      "description": "Current project status"
    },
    "seeking": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "What kind of collaboration you're looking for"
    },
    "vision": {
      "type": "string",
      "description": "What you're building and why it matters"
    },
    "why_join": {
      "type": "string",
      "description": "What's in it for collaborators"
    },
    "links": {
      "type": "object",
      "required": ["repo"],
      "properties": {
        "repo": { "type": "string", "format": "uri" },
        "demo": { "type": "string", "format": "uri" },
        "docs": { "type": "string", "format": "uri" },
        "moltbook": { "type": "string" },
        "shipyard": { "type": "string" }
      }
    },
    "maintainer": {
      "type": "string",
      "description": "Moltbook handle or contact method"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    }
  }
}
