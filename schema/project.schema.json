{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spore Project",
  "description": "A work-in-progress seeking collaborators",
  "type": "object",
  "required": ["repo", "tagline", "status", "seeking", "vision", "why_join", "maintainer", "updated"],
  "properties": {
    "repo": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_.-]+$",
      "description": "GitHub owner/repo (must match file path)"
    },
    "tagline": {
      "type": "string",
      "maxLength": 100,
      "description": "One-line description"
    },
    "status": {
      "type": "string",
      "enum": ["idea", "prototype", "active", "stuck", "paused"],
      "description": "Current project status"
    },
    "seeking": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "What kind of collaboration you're looking for"
    },
    "vision": {
      "type": "string",
      "description": "What you're building and why it matters"
    },
    "why_join": {
      "type": "string",
      "description": "What's in it for collaborators"
    },
    "links": {
      "type": "object",
      "properties": {
        "upstream": { "type": "string", "format": "uri" },
        "demo": { "type": "string", "format": "uri" },
        "docs": { "type": "string", "format": "uri" },
        "discord": { "type": "string" },
        "moltbook": { "type": "string" },
        "clawnews": { "type": "string" },
        "shipyard": { "type": "string" }
      }
    },
    "maintainer": {
      "type": "string",
      "description": "Primary maintainer (GitHub username or agent handle)"
    },
    "verified": {
      "type": "boolean",
      "description": "Set by automation if README contains verification badge"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    }
  }
}
